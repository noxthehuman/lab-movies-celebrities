<h2>New movie </h2>

<form action="/movies/create" method="post">
    <label for="title"> Title</label>
    <input type="text" name="title" id="title" placeholder="ex: Spider-Man" />

    <label for="genre"> Genre </label>
    <input type="text" name="genre" id="genre" placeholder="Action" />

    <label for="plot"> Plot </label>
    <input type="plot" name="plot" id="plot" placeholder="What happens in the movie" />

    <label for="cast">Choose the cast :</label>
    <select name="cast" id="cast" multiple> 
        {{#each celebrities}}
        <option value="{{_id}}"> {{name}} </option>
        {{/each}}
    </select>

    <input type="submit" value="Add Movie">
</form>